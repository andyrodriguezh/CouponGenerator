{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "CouponsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Coupons",
        "BillingMode": "PAY_PER_REQUEST",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "Tags": [
          {
            "Key": "Project",
            "Value": "QR Coupon Generator"
          }
        ]
      }
    },
    "CouponsBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedHeaders": ["*"],
              "AllowedMethods": ["GET", "PUT", "POST", "DELETE", "HEAD"],
              "AllowedOrigins": ["*"],
              "MaxAge": 3000
            }
          ]
        },
        "Tags": [
          {
            "Key": "Project",
            "Value": "QR Coupon Generator"
          }
        ]
      }
    },
    "CouponFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Policies": [
          {
            "PolicyName": "CouponServicePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:PutItem",
                    "dynamodb:GetItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:DeleteItem",
                    "dynamodb:Scan",
                    "dynamodb:Query"
                  ],
                  "Resource": {
                    "Fn::GetAtt": ["CouponsTable", "Arn"]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:GetObject",
                    "s3:DeleteObject"
                  ],
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        {
                          "Fn::GetAtt": ["CouponsBucket", "Arn"]
                        },
                        "/*"
                      ]
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "TableName": {
      "Value": {
        "Ref": "CouponsTable"
      },
      "Description": "Nombre de la tabla DynamoDB para almacenar cupones"
    },
    "BucketName": {
      "Value": {
        "Ref": "CouponsBucket"
      },
      "Description": "Nombre del bucket S3 para almacenar im√°genes de cupones"
    },
    "RoleName": {
      "Value": {
        "Ref": "CouponFunctionRole"
      },
      "Description": "Nombre del rol IAM para funciones Lambda"
    }
  }
}
